
@model LoginViewModel;
@{
    ViewData["Title"] = "Prijava";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Za korištenje aplikacije potrebno se prijaviti.</p>
<p>Prijavite se svojim podacima ili registrirajte ako nemate račun.</p>
<a asp-action="Register">Registracija.</a>
<hr />

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">
        <label>Korisničko ime</label>
        <input asp-for="KorisnickoIme" class="form-control" placeholder="Unesite korisničko ime">
        <span asp-validation-for="KorisnickoIme" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Lozinka</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Lozinka">
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Prijava</button>
</form>



